<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvAddress"
        android:text = "Address: "
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="105 Brooklyn Street" />

    <TextView
        android:id="@+id/tvLocation"
        android:text = "Location: "
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Austin, TX" />

    <TextView
        android:id="@+id/tvPropertyType"
        android:text = "Property Type: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvLocation"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        tools:text="Apartment" />

    <TextView
        android:id="@+id/tvLivingArea"
        android:text = "Living Area: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvPropertyType"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        tools:text="1500 sqft" />

    <TextView
        android:id="@+id/tvLotSize"
        android:text = "Lot Size: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/tvLivingArea"
        app:layout_constraintStart_toEndOf="@id/tvLivingArea"
        android:layout_marginStart="16dp"
        tools:text="4500 sqft" />

    <TextView
        android:id="@+id/tvYearBuilt"
        android:text = "Year Built: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvLivingArea"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        tools:text="Built: 2005" />

    <TextView
        android:id="@+id/tvEstimatedPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvYearBuilt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Price evalueted: " />

    <Button
        android:id="@+id/callModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property Valuation"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvEstimatedPrice"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
